
word = input("Hi, type in a word and I will tell you if it is a palindrome: ")
print(word)

letters_in_word = list(word)
print(letters_in_word)

letters_in_word.reverse()
print(letters_in_word)

string_from_list = "".join(letters_in_word)
print(string_from_list)

print(f'Your word is a palindrome: {string_from_list == word}')
      
                              


